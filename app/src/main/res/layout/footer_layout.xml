<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_twenty_px"
        android:layout_alignParentBottom="true"
       	android:background="@drawable/tab_bar_bg"
        android:orientation="horizontal">
	        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@color/gray"
            android:weightSum="4" >

            <LinearLayout
                android:id="@+id/addtrip_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                  android:layout_marginTop="@dimen/twenty_pt"
                  android:background="@color/gray"
                android:onClick="addtripclick"
                android:orientation="horizontal"
                android:weightSum="2">

              

                <TextView
                    android:id="@+id/addtrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:onClick="addtripclick"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:layout_marginTop="4dp"
          			android:layout_marginBottom="@dimen/twenty_pt"
                    android:text="@string/addtrip_footer"
                     
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                   />
                 <ImageView
            android:id="@+id/navbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_pt"
            android:clickable="false"
            android:src="@drawable/navbarline"
             />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adphone_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.98"
                android:paddingLeft="5dp"
                	 android:background="@color/gray"
                android:onClick="addphoneclick"
                android:orientation="horizontal"
                  android:layout_marginTop="@dimen/twenty_pt"
                android:weightSum="2" >
                       <TextView
                    android:id="@+id/phonecll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:onClick="addphoneclick"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:layout_marginTop="4dp"
          			android:layout_marginBottom="@dimen/twenty_pt"
                    android:text="@string/addphone_footer"
                    
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                   />
                        <ImageView
            android:id="@+id/navbar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_pt"
            android:clickable="false"
            android:src="@drawable/navbarline"
             />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addinvite_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.00"
               
                android:orientation="horizontal"
                  android:layout_marginTop="@dimen/twenty_pt"
                	 android:background="@color/gray"
                android:weightSum="2" >

               

                <TextView
                    android:id="@+id/Invite_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/twenty_pt"
                    android:layout_marginTop="@dimen/twenty_pt"
                    android:clickable="true"
                   
                    android:paddingLeft="5dp"
                    android:paddingRight="3dp"
                     android:background="@color/gray"
                    android:text="@string/invite_footer"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                
            </LinearLayout>

            
        </LinearLayout>
       
    </LinearLayout>
    
    
</RelativeLayout>