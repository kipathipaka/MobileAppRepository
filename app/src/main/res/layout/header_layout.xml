<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="ContentDescription" >
	 
        <ImageView
            android:id="@+id/car_logo"
            android:layout_width="@dimen/eighty_pt"
            android:layout_height="@dimen/eighty_pt"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:contentDescription="@string/todo"
            android:paddingTop="@dimen/thirty_pt"
            android:src="@drawable/car_logo"
            tools:ignore="RtlHardcoded,HardcodedText" />
            
 <TextView
            android:id="@+id/txt_contTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/one_twenty_px"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/car_logo"
           
            android:text="@string/company_detalis"
            android:textColor="@color/black"
            android:textSize="@dimen/fourty_one_pt"
            android:textStyle="bold"
                android:layout_centerHorizontal="true"
             tools:ignore="RtlHardcoded"/>
 

</RelativeLayout>