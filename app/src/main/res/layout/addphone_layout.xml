<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/headerlayou"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bar_bg_top">
        <include
            android:id="@+id/header"
            layout="@layout/header_layout"/>

    </LinearLayout>
           <ScrollView  android:id="@+id/addphoneview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/headerlayou">

<TableLayout
        android:id="@+id/registerTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
          android:layout_below="@+id/headerlayou"
        android:layout_marginLeft="@dimen/thirty_pt"
        android:layout_marginRight="@dimen/thirty_pt"
        android:layout_marginTop="@dimen/fifty_pt"
        android:orientation="horizontal"
        android:paddingLeft="0.5dp"
        android:paddingRight="0.5dp" >
        
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          
            android:paddingLeft="1dp"
            android:paddingRight="1dp" >

            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Enter the phonenumber
                                you want to track"
                android:paddingLeft="5dp"
                style="@style/codefont">
            </TextView>
        </TableRow>


        
 <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:background="@color/gray"
     android:paddingLeft="1.5dp"
     android:paddingRight="1.5dp"
     android:paddingBottom="1.5dp"
     android:paddingTop="1.5dp">
  <EditText
                android:id="@+id/edityournum"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
      android:textCursorDrawable="@color/black"

                android:hint="e.g:+919543492022"
                 android:inputType="phone"
                android:paddingLeft="5dp" />
        </TableRow>
    <TableRow
        android:id="@+id/addrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/addbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/add_btn"
            android:background="@color/appDarkBlue"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </TableRow>

</TableLayout>
    
</ScrollView>

 
</RelativeLayout>
