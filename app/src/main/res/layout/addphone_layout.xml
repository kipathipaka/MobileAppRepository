<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/headerlayou"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bar_bg_top">
        <include
            android:id="@+id/header"
            layout="@layout/header_layout"/>

    </LinearLayout>
           <ScrollView  android:id="@+id/addphoneview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/headerlayou">

<TableLayout
        android:id="@+id/registerTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
          android:layout_below="@+id/headerlayou"
        android:layout_marginLeft="@dimen/thirty_pt"
        android:layout_marginRight="@dimen/thirty_pt"
        android:layout_marginTop="@dimen/fifty_pt"
        android:orientation="horizontal"
        android:paddingLeft="0.5dp"
        android:paddingRight="0.5dp" >
        
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          
            android:paddingLeft="1dp"
            android:paddingRight="1dp" >

            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Enter the phonenumber
                                you want to track"
                android:paddingLeft="5dp" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       
            android:paddingLeft="1dp"
            android:paddingRight="1dp" >

             <TextView
                android:id="@+id/examplephone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
               android:textColor="@color/gray"
                android:textSize="20dp"
                 android:text="e.g +911234567890"
                android:paddingLeft="5dp" >
            </TextView>
        </TableRow>
        
 <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:paddingRight="1dp" 
             android:paddingTop="10dp">
  <EditText
                android:id="@+id/edityourname"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:ems="10"
              
                android:inputType="text"
                android:paddingLeft="5dp" />
        </TableRow>
       
    </TableLayout>
    
</ScrollView>
 <Button
        android:id="@+id/addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addphoneview"
        android:layout_marginLeft="@dimen/thirty_pt"
        android:layout_marginRight="@dimen/thirty_pt"
        android:layout_marginTop="@dimen/fifty_pt"
        android:background="@color/appDarkBlue"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/add_btn"
        android:textColor="@color/black" />
 
</RelativeLayout>
